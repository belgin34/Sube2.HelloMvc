<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sube2.HelloMvc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">

        <nav class="sidebar bg-dark text-white">
            <div class="p-3">
                <h4 class="text-center"><i class="fas fa-graduation-cap me-2"></i> Menü</h4>
                <hr class="bg-white" />
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i> Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" asp-action="OgrenciListe" asp-controller="Ogrenci"><i class="fas fa-list me-2"></i> Öğrenci Listesi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="OgrenciEkle" asp-controller="Ogrenci"><i class="fas fa-user-plus me-2"></i> Öğrenci Ekle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt me-2"></i> Gizlilik</a>
                    </li>
                </ul>
            </div>
        </nav>

   
        <div class="content-wrapper">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer bg-dark text-white text-center py-3">
        © @DateTime.Now.Year - Sube2.HelloMvc - Tüm Hakları Saklıdır.
    </footer>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
        overflow-x: hidden;
    }

    .wrapper {
        display: flex;
        flex: 1;
        min-width: 0;
    }

    .sidebar {
        width: 250px;
        padding: 0;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        overflow-y: auto;
        transition: all 0.3s;
    }

        .sidebar .nav-link {
            border-radius: 5px;
            margin: 5px 10px;
            padding: 10px;
        }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.1);
            }

    .content-wrapper {
        flex: 1;
        margin-left: 250px;
        display: flex;
        flex-direction: column;
        min-width: 0;
    }

    .content {
        flex: 1;
        padding: 20px;
    }

    .footer {
        width: calc(100% - 250px);
        margin-left: 250px;
    }
</style>